@model RCS.Models.IndicatorsAnalysisModel
@using RCS_Data
@{
    ViewBag.Title = "indicatorsAnalysis";
}
<div class="row">
    <div class="col-sm-2">
        <ul class="nav nav-pills nav-stacked">
            <li style="background-color:#5BA198;"><a href="#indicatorsAnalysisIndex" style="color:#ffffff;"><span class="glyphicon glyphicon-align-left" />&emsp;項目</a></li>
            <li><a href="#@(ViewBag.Title)" data-toggle="tab" url="@Url.Content("~/IndicatorsAnalysis/ResultAnalysis?itemType=rtResultAnalysis")">呼吸器治療使用結果分析</a></li>
            <li><a href="#@(ViewBag.Title)" data-toggle="tab" url="@Url.Content("~/IndicatorsAnalysis/ResultAnalysis?itemType=rtDaysUseAnalysis")">呼吸器平均使用天數</a></li>
            @*<li><a href="#@(ViewBag.Title)" data-toggle="tab" url="@Url.Content("~/IndicatorsAnalysis/ResultAnalysis?itemType=rtDayOfStayAnalysis")">呼吸器平均使用人日數</a></li>*@
            <li><a href="#@(ViewBag.Title)" data-toggle="tab" url="@Url.Content("~/IndicatorsAnalysis/ResultAnalysis?itemType=rtDetachmentRate")">呼吸器依賴患者脫離率</a></li>
            <li><a href="#@(ViewBag.Title)" data-toggle="tab" url="@Url.Content("~/IndicatorsAnalysis/ResultAnalysis?itemType=inTubeAnalysis")">插管拔管分析：醫囑/自拔/意外</a></li>
        </ul>
    </div>
    <div class="col-sm-10" >
        <div role="tabpanel" class="tab-pane" id="@(ViewBag.Title)"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#indicatorsAnalysisDiv a[data-toggle="tab"]').on('show.bs.tab', function (e) {
            $.ajax({
                type: 'POST',
                url: $(e.target).attr('url'),
                success: function (data) {
                    $('#@(ViewBag.Title)').html(data);
                },
                complete: function () {
                },
                error: function (a, b, c) {
                    alert(a + c);
                }
            });
        });
    });

</script>